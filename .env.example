# Paddy Ingestion Telegram Mini App - Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# REQUIRED
# ============================================================================

# Telegram Bot Token (get from @BotFather)
TELEGRAM_BOT_TOKEN=

# PostgreSQL Database URLs
POSTGRES_PADDY_DATABASE_URL=postgresql://user:password@host:5432/paddy_db
POSTGRES_GEOMETRY_DATABASE_URL=postgresql://user:password@host:5432/geometry_db

# ============================================================================
# OPTIONAL - MinIO Storage
# ============================================================================

MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=
MINIO_SECRET_KEY=
MINIO_BUCKET=agrikredit

# ============================================================================
# OPTIONAL - Google Drive Sync
# ============================================================================

GOOGLE_DRIVE_ROOT_FOLDER_ID=
GOOGLE_SERVICE_ACCOUNT_PATH=./secrets/service-account.json
GOOGLE_IMPERSONATED_EMAIL=

# ============================================================================
# OPTIONAL - Cron Job
# ============================================================================

CRON_SECRET=

# ============================================================================
# DEVELOPMENT ONLY
# ============================================================================

# Bypass Telegram authentication (NEVER enable in production!)
BYPASS_TELEGRAM_AUTH=false

# ============================================================================
# PERFORMANCE TUNING (Optional)
# ============================================================================

# Database
DB_POOL_SIZE=10
DB_TIMEOUT_MS=30000

# Google Drive
GOOGLE_DRIVE_RETRY_ATTEMPTS=3
GOOGLE_DRIVE_TIMEOUT_MS=60000
GOOGLE_DRIVE_CACHE_TTL_MS=300000
GOOGLE_DRIVE_CACHE_SIZE=1000

# MinIO
MINIO_RETRY_ATTEMPTS=3
MINIO_TIMEOUT_MS=30000
MINIO_MAX_FILE_SIZE=10485760

# Sync
SYNC_BATCH_SIZE=10
SYNC_MAX_RETRIES=3
SYNC_RETRY_BASE_DELAY_MS=1000

# Location Cache
LOCATION_CACHE_SIZE=500
LOCATION_CACHE_TTL_MS=3600000

# API
API_TIMEOUT_MS=30000
API_MAX_BODY_SIZE=52428800
